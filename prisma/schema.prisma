generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String @id @default(uuid())
  name  String
  email String @unique
  level Int
  profile_img String?
  password String
  createAt DateTime @default(now())
  updadedAt DateTime @updatedAt
}

model Room {
  id String @id @default(uuid())
  description String
  acessLevel Int      
  createdAt   DateTime @default(now()) // Data de criação da sala
  updatedAt   DateTime @updatedAt // Data de atualização da sala
}
